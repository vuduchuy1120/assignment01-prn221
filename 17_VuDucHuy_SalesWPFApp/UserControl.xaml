<Window x:Class="_17_VuDucHuy_SalesWPFApp.UserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_VuDucHuy_SalesWPFApp"
        mc:Ignorable="d"
        Title="UserControl" Height="350" Width="800"
     WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!--three buttons Order Management, Product Management, Member Management-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="View Or Update Profile" Width="150" Height="50" Margin="10" Click="BtnProfile_Click"/>
            <Button Content="Order History" Width="150" Height="50" Margin="10" Click="BtnOrder_Click"/>
        </StackPanel>
    </Grid>
</Window>

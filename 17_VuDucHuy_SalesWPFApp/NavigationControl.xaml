<Window x:Class="_17_VuDucHuy_SalesWPFApp.NavigationControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_VuDucHuy_SalesWPFApp"
        mc:Ignorable="d"
        Title="NavigationControl" Height="250" Width="650"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        >
    <Grid>
        <!--three buttons Order Management, Product Management, Member Management-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Order Management" Width="150" Height="50" Margin="10" Click="BtnOrder_Click"/>
            <Button Content="Product Management" Width="150" Height="50" Margin="10" Click="BtnProduct_Click"/>
            <Button Content="Member Management" Width="150" Height="50" Margin="10" Click="BtnMember_Click"/>
            
        </StackPanel>

    </Grid>
</Window>
